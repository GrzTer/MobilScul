<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formularz zamówienia pizzy"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextImie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>

        <TextView
            android:id="@+id/textViewRozmiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz rozmiar pizzy:" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/RadioMala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mała" />

            <RadioButton
                android:id="@+id/RadioSrednia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Średnia" />

            <RadioButton
                android:id="@+id/RadioDuza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duża" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewDodatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodatki:" />

        <CheckBox
            android:id="@+id/checkBoxSer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ser" />

        <CheckBox
            android:id="@+id/checkBoxPieczarki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pieczarki" />

        <CheckBox
            android:id="@+id/checkBoxSzynka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Szynka" />

        <TextView
            android:id="@+id/textViewIlosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ilość pizz: " />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5" />

        <Button
            android:id="@+id/Zamow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zamów" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>